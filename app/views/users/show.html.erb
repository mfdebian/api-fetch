<main>
  <ul>
    <li>
      <strong>Full name:</strong>
      <%= @user.name %>
    </li>
    <li>
      <strong>Username:</strong>
      <%= @user.username %>
    </li>
    <li>
      <strong>Email:</strong>
      <%= @user.email %>
    </li>
    <li>
      <strong>Phone number:</strong>
      <%= @user.phone %>
    </li>
    <% if @user.website.present? %>
      <li>
        <strong>Personal website:</strong>
        <%= @user.website %>
      </li>
    <% end %>
  </ul>

  <div>
    <%= link_to "Back to users", users_path %>
  </div>
</main>
